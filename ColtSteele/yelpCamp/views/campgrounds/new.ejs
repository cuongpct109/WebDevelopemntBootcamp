<% layout("layouts/boilerplate") %>
<h1>Add New Campground</h1>
<form action="/campgrounds" method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" name="campground[title]" id="title" />
  </div>
  <div>
    <label for="location">Location:</label>
    <input type="text" name="campground[location]" id="location" />
  </div>
  <button type="submit">Add Campground</button>
</form>
<br />
<div><a href="/campgrounds">All Campgrounds</a></div>
