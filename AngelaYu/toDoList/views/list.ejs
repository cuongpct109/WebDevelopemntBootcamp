<%- include("header") -%>
<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>

<div class="box">
  <form action="/delete" method="post">
    <% newListItems.forEach((item) => { %>
    <div class="item">
      <input
        onChange="this.form.submit()"
        name="checkBox"
        value="<%=item.name%>"
        type="checkbox"
      />
      <p><%= item.name %></p>
    </div>
    <%});%>
    <input type="hidden" name="listName" value="<%=listTitle%>" id="" />
  </form>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>
